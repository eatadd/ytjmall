.step {
    /*position: fixed;
    top: 0;*/
    width: 100%;
    height: 40px;
    margin-top: 10px;
}

.step > div {
    width: 50%;
    height: 40px;
}

.step > div span {
    position: relative;
    top: 10px;
}

.step > div:nth-child(1) {
    background: url("../../images/user/register_2.png") no-repeat;
    background-size:cover;
    background-position:center;
}

.step > div:nth-child(2) {
    background: url("../../images/user/register_1.png") no-repeat;
    background-size:cover;
    background-position:center;
}

.user_logo {
    padding: 60px 0 10px;
    text-align: center;
    font-size: 20px;
}

.user_logo img {
    width: 100px;
    height: 110px;
    padding-bottom: 20px;
    margin: 0 auto;
}
.user_info input{
    width: 100%;
    outline: none;
    border: none;
    border-bottom: 1px solid #f0f0f0;
    font-size: 16px;
    line-height: 2.4em;
}
.code_btn{
    position: absolute;
    right: 0px;
    bottom:7px;
    padding: 5px 10px;
}
.info_ajax{
    padding: 10px 15px;
}
body{
    background: #FFF;
}
