#qrcode {
    margin: 0 auto;
    position: fixed;
    bottom: 50px;
    left: 0;
    right: 0;
    width: 150px;
}

body, html {
    overflow-y: hidden;
    text-align: center;
    background: linear-gradient(200deg, #6b70b3 20%, #FF9E9E 80%);
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
}

.banner {
    width: 300px;
    height: 300px;
    margin-top: 30px;
    margin: 0 auto;
}
